@model Examination_system.ModelViews.LoginMV

@{
    ViewData["Title"] = "Index";
     
}

<section class="py-5 mb-5 " style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body py-md-1">
                        <div class="row justify-content-center py-4">
                            <div class="col-md-10 col-lg-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold my-3  mx-md-4">Sign in</p>
                                <form asp-action="Index">
                                    <label asp-for="UserName" class="control-label"></label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>

                                    <label asp-for="Password" class="control-label d-block my-2"></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <div class="form-check my-2">
                                        <input class="form-check-input" type="radio" name="Type" id="Type" value="true" checked>
                                        <label class="form-check-label " for="Type">
                                            Student
                                        </label>
                                     </div>   
                                     <div class="form-check  my-2">
                                        <input class="form-check-input " type="radio" name="Type" id="Type" value="false">
                                        <label class="form-check-label" for="Type">
                                            Instructor
                                        </label>
                                    </div>
                                    @if (ViewBag.valid == "false")
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            UnValid UserName and Password
                                        </div>
                                    }
                                    <div class="form-group">
                                        <input type="submit" value="Login" class="btn btn-dark my-4 form-control" />
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-10 col-lg-6  d-flex align-items-center order-1 order-lg-2">
                                <img src="https://static.vecteezy.com/system/resources/previews/010/925/676/non_2x/online-registration-and-sign-up-concept-young-man-signing-up-or-login-to-online-account-on-smartphone-app-user-interface-secure-login-and-password-vector.jpg"
                                     class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



















